<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/t1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical|right"
                android:textColor="#000000"
                android:textSize="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="3"
            android:gravity="bottom">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/x2"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="x^2"
                    android:textSize="20dp"
                    android:background="@drawable/fuhaobtn_shape"
                    android:layout_margin="0.5dp"/>
                <Button
                    android:id="@+id/sqrt"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="√"
                    android:textSize="20dp"
                    android:background="@drawable/fuhaobtn_shape"
                    android:layout_margin="0.5dp"/>
                <Button
                    android:id="@+id/del"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="DEL"
                    android:textSize="20dp"
                    android:background="@drawable/fuhaobtn_shape"
                    android:layout_margin="0.5dp"/>
                <Button
                    android:id="@+id/ac"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="AC"
                    android:textSize="20dp"
                    android:background="@drawable/acbtn_shape"
                    android:layout_margin="0.5dp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/sin"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="sin"
                    android:textSize="20dp"
                    android:background="@drawable/fuhaobtn_shape"
                    android:layout_margin="0.5dp"/>
                <Button
                    android:id="@+id/cos"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="cos"
                    android:textSize="20dp"
                    android:background="@drawable/fuhaobtn_shape"
                    android:layout_margin="0.5dp"/>
                <Button
                    android:id="@+id/tan"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="tan"
                    android:textSize="20dp"
                    android:background="@drawable/fuhaobtn_shape"
                    android:layout_margin="0.5dp"/>
                <Button
                    android:id="@+id/add"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="+"
                    android:textSize="20dp"
                    android:background="@drawable/fuhaobtn_shape"
                    android:layout_margin="0.5dp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btn7"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="7"
                    android:textSize="20dp"
                    android:background="@drawable/numbtn_shape"
                    android:layout_margin="0.5dp"/>
                <Button
                    android:id="@+id/btn8"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="8"
                    android:textSize="20dp"
                    android:background="@drawable/numbtn_shape"
                    android:layout_margin="0.5dp"/>
                <Button
                    android:id="@+id/btn9"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="9"
                    android:textSize="20dp"
                    android:background="@drawable/numbtn_shape"
                    android:layout_margin="0.5dp"/>
                <Button
                    android:id="@+id/minus"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="-"
                    android:textSize="20dp"
                    android:background="@drawable/fuhaobtn_shape"
                    android:layout_margin="0.5dp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="4"
                    android:textSize="20dp"
                    android:background="@drawable/numbtn_shape"
                    android:layout_margin="0.5dp"/>
                <Button
                    android:id="@+id/btn5"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="5"
                    android:textSize="20dp"
                    android:background="@drawable/numbtn_shape"
                    android:layout_margin="0.5dp"/>
                <Button
                    android:id="@+id/btn6"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="6"
                    android:textSize="20dp"
                    android:background="@drawable/numbtn_shape"
                    android:layout_margin="0.5dp"/>
                <Button
                    android:id="@+id/multiply"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="×"
                    android:textSize="20dp"
                    android:background="@drawable/fuhaobtn_shape"
                    android:layout_margin="0.5dp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="1"
                    android:textSize="20dp"
                    android:background="@drawable/numbtn_shape"
                    android:layout_margin="0.5dp"/>
                <Button
                    android:id="@+id/btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="2"
                    android:textSize="20dp"
                    android:background="@drawable/numbtn_shape"
                    android:layout_margin="0.5dp"/>
                <Button
                    android:id="@+id/btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="3"
                    android:textSize="20dp"
                    android:background="@drawable/numbtn_shape"
                    android:layout_margin="0.5dp"/>
                <Button
                    android:id="@+id/divide"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="÷"
                    android:textSize="20dp"
                    android:background="@drawable/fuhaobtn_shape"
                    android:layout_margin="0.5dp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn0"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="0"
                    android:textSize="20dp"
                    android:background="@drawable/numbtn_shape"
                    android:layout_margin="0.5dp"/>

                <Button
                    android:id="@+id/btn00"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="00"
                    android:textSize="20dp"
                    android:background="@drawable/numbtn_shape"
                    android:layout_margin="0.5dp"/>

                <Button
                    android:id="@+id/point"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="."
                    android:textSize="20dp"
                    android:background="@drawable/numbtn_shape"
                    android:layout_margin="0.5dp"/>

                <Button
                    android:id="@+id/equal"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="="
                    android:textSize="20dp"
                    android:background="@drawable/fuhaobtn_shape"
                    android:layout_margin="0.5dp"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>